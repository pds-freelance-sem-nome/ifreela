{
  "name": "ifreela API",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": ["--name","ifreela-api","-p","8000:8000","--network=host"],
  "forwardPorts": [8000],
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "pivotal.vscode-spring-boot",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "mvn clean install -DskipTests -f api/pom.xml",
  "postStartCommand": "mvn spring-boot:run -f api/pom.xml"
}
